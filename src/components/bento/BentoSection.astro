---

import { GithubOutline } from "../icons/GithubOutline"
import { LinkedIn } from "../icons/LinkedIn"
import { Mail } from "../icons/Mail"

import BentoCard from "./BentoCard"

const socialMedias = [
  { icon: LinkedIn, href: 'https://linkedin.com/in/abaskanov' },
  { icon: GithubOutline, href: 'https://github.com/amirabaskanov' },
  { icon: Mail, href: 'mailto:me@amirabaskanov@gmail.com' }
]

---


<!-- tutorial code from https://github.com/Lexington-Themes/lexington-tutorials/blob/main/src/pages/bento-grid/index.astro -->



<section class="bg-slate-950/25 w-2/3 relative overflow-hidden">
      <div
        class="max-w-7xl mx-auto text-balance text-gray-500">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 lg:grid-cols-6">
          <!-- Large box spanning 2x2 -->
          <div
            class="bg-slate-800 ring-1 ring-inset ring-slate-600 shadow p-6 rounded-3xl md:col-span-2 md:row-span-2">
            <p class="text-white">Photography</p>
            <p class="mt-4 text-sm text-slate-400">
              Capture moments in stunning detail with our advanced camera
              technology. Perfect for professionals and enthusiasts alike.
            </p>
          </div>

          <!-- Tall box spanning 3 rows -->
          <div
            class="bg-slate-800 ring-1 ring-inset ring-slate-600 shadow p-6 rounded-3xl md:row-span-2">
            <p class="text-white">Coding</p>
            <p class="mt-4 text-sm text-slate-400">
              Build the future with powerful development tools. From web to
              mobile, create anything you can imagine.
            </p>
          </div>

          <!-- Regular box -->
          <div
            class="bg-slate-800 ring-1 ring-inset ring-slate-600 shadow p-6 rounded-3xl md:row-span-3 lg:row-span-2">
            <p class="text-white">Music</p>
            <p class="mt-4 text-sm text-slate-400">
              Experience the power of sound with high-fidelity audio.
            </p>
          </div>

          <!-- Wide box spanning 2 columns -->
          <div
            class="bg-slate-800 ring-1 ring-inset ring-slate-600 shadow p-6 rounded-3xl md:col-span-2">
            <p class="text-white">Video Production</p>
            <p class="mt-4 text-sm text-slate-400">
              Create cinematic masterpieces with professional-grade tools.
            </p>
          </div>

          <!-- Tall box spanning 2 rows -->
          <div class="grid grid-cols-3 gap-4 col-span-2 md:row-span-1 lg:col-span-2">
            {socialMedias.map(({ icon: Icon, href }) => (
              <BentoCard className="aspect-square group relative overflow-hidden rounded-3xl bg-slate-800 ring-1 ring-slate-600">
                <a
                  href={href}
                  aria-label="Social media"
                  target="_blank"
                  class="flex size-full items-center justify-center rounded-3xl transition-colors duration-300 group-hover:text-emerald-400"
                >
                  <Icon className="size-10 transition-colors duration-300" />
                </a>
              </BentoCard>
            ))}
          </div>

          <!-- Regular boxes -->
          <div
            class="bg-slate-800 ring-1 ring-inset ring-slate-600 shadow p-6 rounded-3xl md:col-span-2">
            <p class="text-white">AI</p>
            <p class="mt-4 text-sm text-slate-400">
              Harness the power of artificial intelligence.
            </p>
          </div>
          <div
            class="bg-slate-800 ring-1 ring-inset ring-slate-600 shadow p-6 rounded-3xl lg:col-span-2">
            <p class="text-white">VR</p>
            <p class="mt-4 text-sm text-slate-400">
              Step into virtual reality and explore new dimensions.
            </p>
          </div>

          <!-- Wide box spanning 3 columns -->
          <div
            class="bg-slate-800 ring-1 ring-inset ring-slate-600 shadow p-6 rounded-3xl md:col-span-3">
            <p class="text-white">IoT Ecosystem</p>
            <p class="mt-4 text-sm text-slate-400">
              Connect your world with smart devices. Create a seamless network
              of intelligent gadgets.
            </p>
          </div>

          <!-- Regular boxes -->
          <div
            class="bg-slate-800 ring-1 ring-inset ring-slate-600 shadow p-6 rounded-3xl lg:col-span-2">
            <p class="text-white">Cloud</p>
            <p class="mt-4 text-sm text-slate-400">
              Scale your projects with powerful cloud solutions.
            </p>
          </div>
          <div
            class="bg-slate-800 ring-1 ring-inset ring-slate-600 shadow p-6 rounded-3xl col-span-full lg:col-span-1">
            <p class="text-white">Security</p>
            <p class="mt-4 text-sm text-slate-400">
              Protect your digital assets with advanced cybersecurity.
            </p>
          </div>
        </div>
      </div>     
    </div>
</section>