---
interface Props {
  title?: string;
  icon?: string;
  colSpan?: boolean;
}

const { title, icon, colSpan } = Astro.props;
---

<div class={`group relative rounded-[32px] border border-[#1e2028] bg-[#0d0f12] overflow-hidden ${colSpan ? 'col-span-2' : ''}`}>
  <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition duration-300 [background:radial-gradient(600px_circle_at_var(--mouse-x)_var(--mouse-y),rgba(255,255,255,0.06),transparent_40%)]" />
  
  <div class="p-6">
    {title && (
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-2 bg-[#1e2028] rounded-full py-1.5 px-3">
          {icon && <span class="text-base">{icon}</span>}
          <span class="text-white text-sm">{title}</span>
        </div>
      </div>
    )}
    <slot />
  </div>
</div> 